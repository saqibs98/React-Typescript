{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
     "ecmaVersion": 2018,
     "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "react-hooks"],
    "extends": [
     "plugin:react/recommended",
     "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
     "@typescript-eslint/no-explicit-any": "off", //For local
     "@typescript-eslint/no-unused-vars": "off", //For local
     "react-hooks/exhaustive-deps": "off", //For local
     "react/prop-types": "off",
     "react-hooks/rules-of-hooks": "error"
     // "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
     "react": {
      "pragma": "React",
      "version": "detect"
     }
    }
   }